<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Learning Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://db.onlinewebfonts.com/c/5c5a257758cff0acee4d28ff555f3bc5?family=Helvetica" rel="stylesheet">
</head>

<body class="font-sans bg-gray-100">

    <!-- Navigation Bar -->
    <nav class="bg-blue-500 text-white text-center py-4">
        <div class="flex justify-between items-center container mx-auto">
            <div class="text-left list-none">
                <li class="text-2xl font-semibold px-4"><a href="/" style="font-family: serif; letter-spacing: 2px;" class="hover:underline">lms</a></li>
            </div>
            <div>
                <a class="bg-red-500 text-white px-4 py-2 mr-2 rounded-md hover:bg-red-600" href="/signout">Sign out</a>
            </div>
        </div>
    </nav>

    <!-- Welcome Message -->
    <div class="welcome mt-2 p-1 mx-auto">
        <div class="bg-gray-200 p-6 rounded-md flex justify-between">
            <p class="sm:text-xl font-semibold">Hello <%= responseBody.username %>! What are you learning today?</p>
            <p class="sm:text-xl font-semibold"><%= new Date().toISOString().slice(0,10) %></p>
        </div>
    </div>

        <%- include('flash-messages.ejs') %>
    <!-- Your Courses Section -->
    <div class="container mx-auto mt-8">
        <h2 class="text-2xl font-semibold mb-4">Your Courses</h2>
        <div class="container mx-auto mt-8">
        
            <% if (userCourses) { %>
                <!-- Display enrolled courses -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    <% userCourses.forEach(course => { %>
                        <div class="bg-white p-4 rounded-md shadow-md flex flex-col items-center gap-1">
                            <h2 class="text-xl font-bold mb-2 text-center"><%= course.courseName %></h2>
                            <p class="text-gray-700">Start Date: <%= course.startDate %></p>
                            <p class="text-gray-700">End Date: <%= course.endDate %></p>   
                            <p class="text-gray-700">Instructor: <%= course.instructor %></p>
                            <a href="/course-outline/<%= course.id %>" class="bg-blue-500 text-white px-6 py-3 rounded-full font-bold hover:bg-blue-600">Go to Course</a>
                            <!-- You can add a link to view more details or navigate to the course -->
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <!-- Display message if user has no enrolled courses -->
                <p class="text-gray-700">You are not enrolled in any courses yet.</p>
            <% } %>
        </div>
    </div>

    <!-- Explore Courses Section -->
    <div class="container mx-auto mt-8">
        <h2 class="text-2xl font-semibold mb-4">Explore Courses</h2>
        <a href="/explore-courses" class="bg-blue-500 text-white px-6 py-3 rounded-full font-bold hover:bg-blue-600">Explore</a>
    </div>

</body>

</html>
